<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="heybook.team1.com.heybookv2.Activity.Category"
    tools:showIn="@layout/app_bar_favorites">

  <RelativeLayout
      android:id="@+id/categoryContentView"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@drawable/bg_cat" />

  <TextView
      android:id="@+id/category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/categoryContentView"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="22dp"
      android:layout_marginLeft="30dp"
      android:layout_marginStart="30dp"
      android:fontFamily="casual"
      android:text="@string/favoriler"
      android:textColor="#FFF"
      android:textSize="20sp"
      android:textStyle="bold" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/categoryContentView"
      android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/classics"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:fontFamily="casual"
          android:layout_margin="10dp"
          android:textStyle="bold"
          android:text="Türk Edebiyatı Klasikleri" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favclassicsRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/categorySelectionButton"
          />

      <TextView
          android:id="@+id/science"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Bilim Kurgu" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favscienceRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/history"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Tarih" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favhistoryRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/adventure"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Macera" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favadventureRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/fear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Korku" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favfearRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/development"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Kişisel Gelişim" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favpersonalDevelopmentRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/novel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Roman" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favnovalRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/fabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:layout_margin="10dp"
          android:fontFamily="casual"
          android:text="Öykü" />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/favfableRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
    </LinearLayout>

  </ScrollView>


</RelativeLayout>
