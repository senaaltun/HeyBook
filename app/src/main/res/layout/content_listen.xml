<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_listen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listen_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="heybook.team1.com.heybookv2.Activity.Listen"
    tools:showIn="@layout/app_bar_listen">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listenBookImage"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listenBookName"
        android:layout_below="@+id/listenBookImage"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:textColor="#FFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listenAuthorTitle"
        android:layout_below="@+id/listenBookName"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:textColor="#FFF"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/listenBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/geri"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/listenAuthorTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />
    <Button
        android:id="@+id/listenForward"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ileri"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/listenAuthorTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/listen_play"
        android:layout_below="@+id/listenAuthorTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/listenPlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Yazar: Ayse Kulin"
        android:textColor="#FFF"
        android:layout_below="@+id/listenPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="#FFF"
        android:text="Yay覺n Evi: Can Yay覺nlar覺"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downloadBook"
        android:fontFamily="casual"
        android:text="Kitab覺 indir"
        android:background="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />






</RelativeLayout>
