<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADADAD"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="heybook.team1.com.heybookv2.Activity.Sepet"
    tools:showIn="@layout/app_bar_sepet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/sepet_bg"
        android:background="@drawable/sepet_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sepet"
            android:text="SEPET"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:fontFamily="casual"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/ic_sepet"
            android:src="@drawable/ic_sepet"
            android:layout_alignTop="@+id/sepet"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="113dp"
            android:layout_marginEnd="113dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalPrice"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:fontFamily="casual"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignTop="@+id/ic_sepet"
            android:layout_alignLeft="@+id/ic_sepet"
            android:layout_alignStart="@+id/ic_sepet" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/sepet_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/sepetRecyclerView" />

    </RelativeLayout>



    <RelativeLayout
        android:orientation="horizontal"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/pay"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="#50d2c2"
            android:fontFamily="casual"
            android:text="Ã–DEME YAP"
            android:textColor="#FFF"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>


</RelativeLayout>
